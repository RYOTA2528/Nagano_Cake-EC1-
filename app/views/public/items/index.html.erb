<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <br />
  <div>
   <h2>商品一覧</h2>
  </div><br />
 <div class="row">
  <% @items.each do |item| %>
  <div class="col-md-3 ">
   <div>
    <%= link_to item_path(item) do %>
     <%= attachment_image_tag item, :image, :fill, 150, 150 %>
    <% end %>
   </div>
   <div>
    <%= item.name %>
   </div>
   <div>
    ¥<%= item.price %>
   </div>
  </div>
    <% end %>
    <%= will_paginate @items, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
</div>


