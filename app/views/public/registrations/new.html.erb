<h2>新規会員登録</h2>

<%= form_with model: resource, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
<!--<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>-->
  <%= render "public/shared/error_messages", resource: resource %>

<div class="row">
 <div class="col-md-9">
   <div class="form-group form-inline" >
     <%= f.label :名前, class:"col-3" %><br />
      <label>(姓)</label><%= f.text_field :last_name, class:"form-control", placeholder:"山田",  autofocus: true %><br />
      <label>(名)</label><%= f.text_field :first_name, class:"form-control", placeholder:"太郎", autofocus: true %><br />
   </div>

   <div class="form-group form-inline" >
    <%= f.label :フリガナ, class:"col-3" %><br />
     <label>(セイ)</label><%= f.text_field :last_name_kana, class:"form-control", placeholder:"ヤマダ",  autofocus: true %><br />
     <label>(メイ)</label><%= f.text_field :first_name_kana, class:"form-control", placeholder:"タロウ", autofocus: true %><br />
   </div>

   <div class="form_group form-inline">
    <%= f.label :メールアドレス, class:"col-3 " %><br />
    <%= f.email_field :email, class:"form-control",  placeholder:"sample@example.com", autofocus: true, autocomplete: "email" %><br />
   </div></br>

   <div class="form_group form-inline">
    <%= f.label :郵便番号（ハイフンなし）, class:"col-3 " %><br />
    <%= f.text_field :postal_code, class:"form-control", placeholder:"0000000", autofocus: true %><br />
   </div></br>

   <div class="form_group form-inline">
    <%= f.label :住所, class:"col-3 " %><br />
    <%= f.text_field :address, class:"form-control", placeholder:"東京都足立区中川0-0", autofocus: true %><br />
   </div></br>

   <div class="form_group form-inline">
    <%= f.label :電話番号（ハイフンなし）, class:"col-3 " %><br />
    <%= f.text_field :telephone_number, class:"form-control", placeholder:"0000000000", autofocus: true %><br />
   </div></br>

   <div class="form_group form-inline">
    <%= f.label :パスワード（6文字以上）, class:"col-3 " %><br />
    <% if @minimum_password_length %>
    <!--<em><%#= @minimum_password_length %> </em>-->
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
   </div>

   <div class="form_group form-inline">
    <%= f.label :パスワード（確認用）, class:"col-3 " %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
   </div>

   <div class="actions">
    <%= f.submit "Sign up" %>
   </div>

<% end %>
<h2>既に登録済みの方</h2>
   <div class="form-inline">
    <%= link_to "ここから", customer_session_path(@customer) %>ログインしてください。
   </div>
 </div>
</div>
<%= render "public/shared/links" %>
