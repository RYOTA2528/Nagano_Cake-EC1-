
<main>
 <div class="container px-5 px-sm-0">
  <div class="row offset-md-1">
   <h2>マイページ</h2>
  </div><br />
 <div class="row">
  <h2>登録情報</h2><%= link_to "編集する", edit_customers_path, class:"btn btn-lg btn-block btn-info mt-4 col-2" %>
 </div>
  <div class="row">
   <div class="col-md-6">
    <table class="table-demo">
     <tr>
     <th>氏名</th>
     <td> <%= @customer.last_name %> <%= @customer.first_name %> </td>
     </tr>
     <tr>
     <th>カナ</th>
     <td> <%= @customer.last_name_kana %> <%= @customer.first_name_kana %> </td>
     </tr>
     <tr>
     <th>郵便番号</th>
     <td><%= @customer.postal_code %></td>
     </tr>
     <tr>
     <th>住所</th>
     <td><%= @customer.address %></td>
     <tr>
     <th>電話番号</th>
     <td><%= @customer.telephone_number %></td>
     </tr>
     <tr>
     <th>メールアドレス</th>
     <td><%= @customer.email %></td>
     </tr>
    </table>
   </div>
  </div>
 </div>

 <h2>配送先</h2><%= link_to "一覧を見る", addresses_path(@address), class:"btn btn-lg btn-block btn-info mt-4 col-2" %>
</main>