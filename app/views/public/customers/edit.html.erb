<main>
   <% if @customer.errors.any? %>
  <%= @customer.errors.count %>error prohibited this obj from being saved:
  <% @customer.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
  <% end %>
<h2>会員情報編集画面</h2>

<div class="row">
  <div class="col-md-9">
   <%= form_with model: @customer, url: customers_path, local: true do |f| %>
   <div class="form-group form-inline" >
      <%= f.label :名前, class:"col-3 offset-md-2" %><br />
       <%= f.text_field :last_name, class:"form-control"%><br />
       <%= f.text_field :first_name, class:"form-control"%><br />
    </div>

    <div class="form-group form-inline" >
     <%= f.label :フリガナ, class:"col-3 offset-md-2" %><br />
      <%= f.text_field :last_name_kana, class:"form-control" %><br />
      <%= f.text_field :first_name_kana, class:"form-control" %><br />
    </div>

    <div class="form_group form-inline">
     <%= f.label :郵便番号, class:"col-3 offset-md-2" %><br />
     <%= f.text_field :postal_code, class:"form-control"%><br />
    </div></br>

    <div class="form_group form-inline">
     <%= f.label :住所, class:"col-3 offset-md-2" %><br />
     <%= f.text_field :address, class:"form-control"%><br />
    </div></br>

    <div class="form_group form-inline">
     <%= f.label :電話番号（ハイフンなし）, class:"col-3 offset-md-2" %><br />
     <%= f.text_field :telephone_number, class:"form-control" %><br />
    </div></br>

    <div class="form_group form-inline">
     <%= f.label :メールアドレス, class:"col-3 offset-md-2" %><br />
     <%= f.email_field :email, class:"form-control" %><br />

    </div><br />
    <div class="row">
     <div class="col-3 offset-2">
     <%= f.submit "編集内容を保存する ", class:"btn btn-lg btn-block btn-info mt-4 col-10 offset-2" %>
     <% end %>
     </div>
     <div class="col-5 offset-2">
        <%= link_to '退会する', customers_unsubscribe_path(@customer), class:"btn btn-lg btn-block btn-info mt-2 offset-2 col-3" %>
     </div>
    </div>
  </div>
</div>
</div>
</main>