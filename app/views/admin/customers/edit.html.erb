<main>
   <% if @customer.errors.any? %>
  <%= @customer.errors.count %>error prohibited this obj from being saved:
  <% @customer.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
  <% end %>
<h2><span><%= @customer.last_name %><%= @customer.first_name %>さんの編集画面</h2>

<!--<%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>-->
  <%#= render "admin/shared/error_messages", resource: resource %>

<div class="row">
 <div class="col-md-9">
  <%= form_with model: @customer, url: admin_customer_path(@customer.id) , local: true do |f| %>
  <div class="form-group form-inline" >
     <%= f.label :名前, class:"col-3" %><br />
      <%= f.text_field :last_name, class:"form-control"%><br />
      <%= f.text_field :first_name, class:"form-control"%><br />
   </div>

   <div class="form-group form-inline" >
    <%= f.label :フリガナ, class:"col-3" %><br />
     <%= f.text_field :last_name_kana, class:"form-control" %><br />
     <%= f.text_field :first_name_kana, class:"form-control" %><br />
   </div>

   <div class="form_group form-inline">
    <%= f.label :郵便番号, class:"col-3 " %><br />
    <%= f.text_field :postal_code, class:"form-control"%><br />
   </div></br>

   <div class="form_group form-inline">
    <%= f.label :住所, class:"col-3 " %><br />
    <%= f.text_field :address, class:"form-control"%><br />
   </div></br>

   <div class="form_group form-inline">
    <%= f.label :電話番号（ハイフンなし）, class:"col-3 " %><br />
    <%= f.text_field :telephone_number, class:"form-control" %><br />
   </div></br>

   <div class="form_group form-inline">
    <%= f.label :メールアドレス, class:"col-3 " %><br />
    <%= f.email_field :email, class:"form-control" %><br />
    <!--placeholder:"sample@example.com", autofocus: true, autocomplete: "email"-->
   </div></br>

   <div class="form_group form-inline">
    <%= f.label :会員ステータス, class:"col-3 " %><br />
    <%= f.radio_button :is_deleted, :effectiveness, checked: true %>
    <%= f.label :is_deleted, "有効", {value: :effectiveness, style: "display: inline-block;"} %>
    <%= f.radio_button :is_deleted, :withdrawal %>
    <%= f.label :is_deleted, "退会", {value: :withdrawal, style: "display: inline-block;"} %>
   </div></br>

   <div class="actions">
    <%= f.submit "変更を保存" %>
   </div>
  <% end %>
 </div>
</div>
</main>
