<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-5">
     <h1>ジャンル一覧・追加</h1>
         <!--<div class="form-body p-4">-->
            <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
                <p><span>ジャンル名<%= f.text_field :name, class:"form-control", placeholder:"ジャンル名" %>
          　     <%= f.submit '新規登録', class:"btn btn-lg btn-block btn-info mt-4" %></span>
          　     </p>
            <% end %>
         <table class="table table-hober table-inverse">
           <thead>
            <tr>ジャンル</tr>
           </thead>
           <tbody>
            <% @genres.each do |genre| %>
            <tr>
             <td><<%= genre.name %></td>
             <td><%=link_to"編集する", edit_admin_genre_path(genre) %>
            </tr><% end %>
           </tbody>
         </table>

  </div>
 </div>
</div>
