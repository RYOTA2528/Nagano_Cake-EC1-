<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <h3>ジャンル一覧・追加</h3><br />
  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
 <div class="row">
   <div class="col-md-2">
    <h4><%= f.label :genre, "ジャンル名" %></h4>
   </div>
   <div class="col-md-2">
     <%= f.text_field :name, class:"form-control", placeholder:"ジャンル名" %>
   </div>
   <div class="col-md-2">
     <%= f.submit '新規登録', class:"btn btn-lg btn-block btn-info mt-4" %>
   </div>
 </div><br />
  <% end %>
 <div class="row">
  <div class="col-5">
   <table class="table table-hober table-inverse">
    <thead>
     <tr>ジャンル</tr>
     </thead>
    <tbody>
     <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td><h4><%=link_to"編集する", edit_admin_genre_path(genre), class:"btn btn-lg btn-block btn-info col-5" %></h4></td>
     </tr><% end %>
    </tbody>
   </table>
  </div>
 </div>
