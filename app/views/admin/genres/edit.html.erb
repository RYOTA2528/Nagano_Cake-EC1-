<p id="notice"></p>
<div class="container px-5 px-sm-0">
   <h3>ジャンル編集</h3><br />
    <%= form_with model: @genre, url: admin_genre_path(@genre), local:true do |f| %>
   <div class="row">
     <div class="col-md-2">
      <h4><%= f.label :genre, "ジャンル名" %></h4>
     </div>
     <div class="col-md-2">
       <%= f.text_field :name, class:"form-control", placeholder:"ジャンル名" %>
     </div>
     <div class="col-md-2">
       <%= f.submit '変更を保存', class:"btn btn-lg btn-block btn-info mt-4" %>
     </div>
   </div><br />
    <% end %>
 </div>