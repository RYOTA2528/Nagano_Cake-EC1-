<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <table class="table table-hober table-inverse">
       <thead>
    <tr>
      <th>商品ID</th>
      <th >商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
    <tbody>
      <% @items.each do |item| %> <tr>
      <td>
      <%= item.id %>
      </td>
      <td><%=link_to admin_item_path(item) do%>
      <%= item.name %>
      <% end %>
      </td>
      <td>
      <%= item.price %>
      </td>
      <td>
      <%= item.genre.name %>
      </td>
      <td>
       <% if item.is_active == true %>
         "販売中"
         <% else %>
         "販売停止中"
         <% end %>
       </td>
     </tr><% end %>
    </tbody>
 </div>
  </table>
  <%= will_paginate @items, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
</div>