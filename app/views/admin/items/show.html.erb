<p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <h3>商品画像</h3><br />
   <div class="row">
    <div class="col-md-3">
      <div class="profile-container">
       <%= attachment_image_tag @item, :image, :fill, 250, 250 %>
      </div>
    </div>
    <div class="col-md-3 offset-md-1">
      <div>
       <label for="name">商品名</label>
       <%= @item.name %>
      </div>
      <div>
      <label for="introduction">商品説明</label>
      <%= @item.introduction %>
      </div>
      <div>
       <label for="genre">ジャンル</label>
       <%= @item.genre.name %>
      </div>
      <div>
       <label for="item.with_tax_price">税込価格（税抜価格）</label>
       <%= @item.with_tax_price.to_s(:delimited) %>
     </div>
     <div>
      <label for="is_active">販売ステータス</label>
      <% if @item.is_active == true %>
         販売中
      <% else %>
         販売停止中
      <% end %>
     </div>
     <div>
      <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-lg btn-block btn-info mt-4" %>
     </div>
 </div>
 </div>
 </div>
